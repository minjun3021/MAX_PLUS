<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35c69d">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/errorchild2_childt2"

            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="20dp"
            android:weightSum="5"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/errorchild2_tv1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[공지사항]"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/errorchild2_tv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[오류문의]"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/errorchild2_tv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[이벤트]"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorchild2_childl2"

            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintTop_toBottomOf="@id/errorchild2_childt2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[미디어]"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="[쿠폰구매]"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/errorchild2_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorchild2_childl2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorchild2_tfirst"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/errorchild2_line"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:text="발생일시"/>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:id="@+id/errorchild2_l1"
            android:weightSum="5"
            app:layout_constraintTop_toBottomOf="@id/errorchild2_tfirst"
            app:layout_constraintLeft_toLeftOf="@id/errorchild2_t4"
            app:layout_constraintRight_toRightOf="@id/errorchild2_t4"
            android:layout_height="50dp">

            <EditText
                android:gravity="center"
                android:id="@+id/errorchild2_et1"
                android:layout_width="0dp"
                android:hint="2018"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:gravity="center"
                android:hint="12"

                android:id="@+id/errorchild2_et2"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:gravity="center"
                android:layout_width="0dp"
                android:hint="03"
                android:id="@+id/errorchild2_et3"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/errorchild2_et4"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="0dp"
                android:hint="16:42"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorchild2_t1"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/errorchild2_l1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:text="내용"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/errorchild2_c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:background="#fff"
            app:layout_constraintLeft_toLeftOf="@id/errorchild2_t4"

            app:layout_constraintTop_toBottomOf="@id/errorchild2_t1">

            <Spinner
                android:id="@+id/deposit_spinner"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:entries="@array/bit"></Spinner>
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorchild2_t3"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/errorchild2_c1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:text="내용"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#fff"
            android:gravity="center"
            android:id="@+id/errorchild2_t4"
            android:text="리플 구매가 안되요!."
            app:layout_constraintTop_toBottomOf="@id/errorchild2_t3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_deposit_bt"
            android:text="목록으로"
            android:inputType="number"
            android:textColor="#fff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/errorchild2_t4" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>