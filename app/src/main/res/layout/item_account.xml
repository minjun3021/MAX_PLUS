<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/item_a_t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="신한은행"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_a_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(주)맥스코인"
        app:layout_constraintLeft_toLeftOf="@id/item_a_t1"
        app:layout_constraintTop_toBottomOf="@id/item_a_t1" />

    <TextView
        android:id="@+id/item_a_t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="130-565-1120"
        app:layout_constraintLeft_toLeftOf="@id/item_a_t1"
        app:layout_constraintTop_toBottomOf="@id/item_a_t2" />

    <TextView
        android:id="@+id/item_a_t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,250,000원"
        app:layout_constraintLeft_toLeftOf="@id/item_a_t1"
        app:layout_constraintTop_toBottomOf="@id/item_a_t3" />
    <TextView
        android:id="@+id/item_a_t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-10-04 16:32"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@id/item_a_t2"
        app:layout_constraintBottom_toBottomOf="@id/item_a_t3"
        app:layout_constraintRight_toRightOf="parent"/>
    <View
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_a_t4"
        android:layout_width="0dp"
        android:id="@+id/item_a_l1"
        android:layout_height="1dp"

        android:background="#000"
        />
</android.support.constraint.ConstraintLayout>