<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_buy_img"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_chicken"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BHC치킨 12000p"
        android:textSize="20sp"
        android:id="@+id/item_buy_t1"
        app:layout_constraintLeft_toLeftOf="@id/item_buy_img"
        app:layout_constraintRight_toRightOf="@id/item_buy_img"
        app:layout_constraintTop_toBottomOf="@id/item_buy_img" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_deposit_bt"
        app:layout_constraintRight_toRightOf="parent"
        android:text="구매신청"
        android:textColor="#fff"
        android:textSize="30sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@id/item_buy_img"
        app:layout_constraintBottom_toBottomOf="@id/item_buy_img"
        app:layout_constraintLeft_toRightOf="@id/item_buy_img"
        />
    <View
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_buy_t1"
        android:layout_width="0dp"
        android:id="@+id/item_a_l1"
        android:layout_height="1dp"

        android:background="#000"
        />
</android.support.constraint.ConstraintLayout>